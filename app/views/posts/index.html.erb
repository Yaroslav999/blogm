<div class="col-lg-12 col-xl-12 row">
	<h1><%= link_to 'Создать статью', new_post_path %></h1>
	<article class="posts col-xl-8 col-lg-8  col-md-12 col-xs-12">
		<% @posts.each do |post| %>
			<div class="post">
				<h2><%= link_to post.name.capitalize, post_path(post) %></h2>
				<p>(Статья опубликована: <time><%= post.created_at.to_date.strftime("%D %B , %Y") %></time>)</p>
				<% if post.image.present? %>
					<p class="img-post-index"> <img src="<%= post.image %>" alt=""> </p>
				<% end %>
				<p><%= post.content.length > 100 ? post.content.first(100).html_safe+'...' : post.content.html_safe   %></p> 
					<p><%= link_to 'Изменить статью', edit_post_path(post), class:'btn btn-info btn-sm' %> <%= link_to 'Удалить статью', post_path(post), method: :delete, data: {confirm: 'Вы уверены?'}, class:'btn btn-danger btn-sm' %></p>
			</div>
		<% end %>
	</article>
</div>
<div class="container">
		<%= paginate @posts %> <br>
</div>
