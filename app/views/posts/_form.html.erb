<div class="container">
	<%= form_for @post do |f| %>
		<div class="form-group">
		  <%= f.label :Название %><br>
		  <%= f.text_field :name, class: 'form-control' %><br>  
		</div>
		<div class="form-group">
		  <%= f.label :Текст %><br>
		  <%= f.trix_editor :content, class: 'editor' %><br>  
		</div>
		<div class="form-group">
		  <%= f.file_field :image %><br>
		</div>
		<div class="form-group">
			<%= f.submit 'Cохранить', class:'btn btn-info'%>
		</div>

	<% end %>
<p><%= link_to 'Назад', posts_path %></p>
</div>