<% if @category.errors.any? %>
  <div class="alert alert-danger">
    <h5><%= 'Вы допустили ошибку при заполнении формы' %></h5>
    <ul>
      <% @category.errors.messages.each  do |attr, msg| %>
        <li><%= msg.to_s.gsub(/\["|"\]/, '') %></li>
      <%end%>
    </ul>
  </div>
<% end %>

<div class="container col-xl-8 col-lg-12  col-md-12 col-xs-1">
	<%= form_for @category do |f| %>
		<div class="form-group">
		  <%= f.label :Название_категории %><br>
		  <%= f.text_field :name, class: 'form-control', placeholder: 'BMW auto.' %><br>  
		</div>
		<div class="form-group">
		  <%= f.label :Описание_категории %><br>
		  <%= f.trix_editor :description, class: 'editor' %><br>  
		</div>
		<div class="form-group">
			<%= f.submit 'Cохранить категорию', class:'btn btn-info'%>
		</div>

	<% end %>
	<td><%= link_to 'Назад', categories_path %></td>
</div>